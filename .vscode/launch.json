{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch and Debug Hosted Blazor WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "hosted": true,
            "program": "${workspaceFolder}/ExpenseTrackerWasmWebApp/bin/Debug/net10.0/ExpenseTrackerWasmWebApp.dll",
            "cwd": "${workspaceFolder}/ExpenseTrackerWasmWebApp"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ExpenseTrackerWebApp/bin/Debug/net9.0/ExpenseTrackerWebApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ExpenseTrackerWebApp",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/ExpenseTrackerWebApp/Views"
            }
        },
        {
            "name": "ExpenseTracker WebApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ExpenseTrackerWebApi/bin/Debug/net10.0/ExpenseTrackerWebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ExpenseTrackerWebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5001"
            }
        }
    ]
}