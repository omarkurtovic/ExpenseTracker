@rendermode InteractiveWebAssembly
@using MudBlazor

<MudFab Color="Color.Primary" StartIcon="@IconClass" OnClick="@OnClick" Class="@("add-fab " + Class)" />
    
<style>
    .add-fab{
        position:fixed;
        right: 25px;
        bottom: 25px;
        z-index: 1000;
    }
</style>

@code{
    [Parameter]
    public required string Text {get; set;}

    [Parameter]
    public string IconClass{get; set;} = "";

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public string Class { get; set; }

}