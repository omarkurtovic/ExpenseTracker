@page "/budgets"
@attribute [Authorize]
@rendermode InteractiveWebAssembly

@using ExpenseTrackerSharedCL.Features.Accounts.Dtos
@using ExpenseTrackerSharedCL.Features.Budgets.Dtos
@using ExpenseTrackerSharedCL.Features.Budgets.Services
@using ExpenseTrackerSharedCL.Features.Categories.Dtos
@using Microsoft.AspNetCore.Authorization
@using MudBlazor
@using Microsoft.AspNetCore.Components.Web
@using ExpenseTrackerWasmWebApp.Features.SharedKernel.Components
@using ExpenseTrackerWasmWebApp.Features.Budgets.Services
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject IBudgetService BudgetService
@inject NavigationManager NavigationManager

<PageTitle>Budgets</PageTitle>

@if (Loading)
{
    <div class="d-flex justify-center align-center" style="height: 80vh;">
        <MudProgressCircular Indeterminate="true" Size="Size.Large" />
    </div>
}
else
{
    @if(MyBudgets != null){
        <MudContainer MaxWidth="MaxWidth.Medium">
            <MudPaper Class="pa-6 mt-6" Elevation="15">
                <MudGrid>
                    <MudItem xs="12" Class="d-flex justify-center">
                        <MudText Typo="Typo.h4">Budgets</MudText>
                    </MudItem>
                    <MudItem xs="12" Class="d-none d-md-flex justify-center gap-5 mb-4">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="@(() => OpenBudgetDialogAsync(null))">Add</MudButton>
                    </MudItem>
                    <FabButton Class="d-flex d-md-none" Text="Add" IconClass="@Icons.Material.Filled.Add" OnClick="@(() => OpenBudgetDialogAsync(null))" />

                    @if(MyBudgets == null || MyBudgets.Count == 0)
                    {
                        <MudItem xs="12" Class="d-flex justify-center mt-4">
                            <MudText Typo="Typo.h5">No budgets found!</MudText>
                        </MudItem>
                    }
                    else
                    {
                        @foreach(var budget in MyBudgets)
                        {
                            <MudItem xs="12" md="6">
                                <BudgetCard 
                                    Budget="@budget"
                                    OnEdit="OpenBudgetDialogAsync"
                                    OnDelete="ConfirmDelete">
                                    <Content>
                                        <MudProgressLinear Value="@(budget.Progress)" Color="@budget.ProgressColor"></MudProgressLinear>
                                        <MudText Typo="Typo.body2">Spent: $@budget.Spent.ToString("F2") / $@budget.Amount?.ToString("F2")</MudText>
                                    </Content>
                                </BudgetCard>
                            </MudItem>
                        }
                    }
                </MudGrid>
            </MudPaper>
        </MudContainer>
    }
}


@code {

    [PersistentState]
    public List<BudgetWithProgressDto>? MyBudgets { get; set; }

    [PersistentState]
    public bool Loading { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        if (!OperatingSystem.IsBrowser())
        {
            await RefreshPage();
            Loading = false;
        }
    }

    private async Task OpenBudgetDialogAsync(BudgetWithProgressDto? budget)
    {
        var budgetDto = new BudgetDto();
        if(budget != null)
        {
            budgetDto = new BudgetDto
            {
                Id = budget.Id,
                Name = budget.Name,
                Amount = budget.Amount,
                BudgetType = budget.BudgetType,
                Description = budget.Description,
                Categories = budget.BudgetCategories.Select(c => c.CategoryId).ToList(),
                Accounts = budget.BudgetAccounts.Select(a => a.AccountId).ToList()
            };
        }

        var options = new DialogOptions { 
            CloseOnEscapeKey = true, 
            NoHeader=false, 
            CloseButton=true, 
            MaxWidth=MaxWidth.Medium  
        };

        var parameters = new DialogParameters<BudgetDialog>
        {
            { x => x.BudgetDto, budgetDto }
        };

        var dialog = await DialogService.ShowAsync<BudgetDialog>(title: "", parameters, options);
        var result = await dialog.Result;
        if (result != null && !result.Canceled)
        {
            await RefreshPage();
        }
    }

    private async Task ConfirmDelete(int budget_id)
    {
        var options = new DialogOptions { 
            CloseOnEscapeKey = true, 
        };
        var parameters = new DialogParameters<ConfirmDialog>
        {
            { x => x.Message,  "Are you sure you want to delete the budget? " }
        };

        var dialog = await DialogService.ShowAsync<ConfirmDialog>(title: "", parameters, options);
        var result = await dialog.Result;
        if (result != null && !result.Canceled)
        {
            var deleteResult = await BudgetService.DeleteBudgetAsync(budget_id);
            if (deleteResult.IsSuccess)
            {
                Snackbar.Add("Budget successfully deleted!", Severity.Success);
                await RefreshPage();
            }
            else if (deleteResult.Reason == FailureReason.Unauthorized)
            {
                Snackbar.Add("Session expired. Please log in again.", Severity.Error);
                NavigationManager.NavigateTo("login");
            }
            else
            {
                Snackbar.Add(deleteResult.ErrorMessage ?? "Error deleting budget!", Severity.Error);
            }
        }
    }

    async Task RefreshPage()
    {
        var result = await BudgetService.GetBudgetsAsync();
        if (result.IsSuccess)
        {
            MyBudgets = result.Data;
        }
        else if (result.Reason == FailureReason.Unauthorized)
        {
            Snackbar.Add("Session expired. Please log in again.", Severity.Error);
            NavigationManager.NavigateTo("login");
        }
        else
        {
            Snackbar.Add(result.ErrorMessage ?? "Error fetching budgets!", Severity.Error);
        }
    }
}
