@using ExpenseTrackerSharedCL.Features.Budgets.Dtos
@using MudBlazor
@using MudBlazor.Extensions
@using System.Globalization
@using ExpenseTrackerWasmWebApp.Features.SharedKernel.Components

<EntityCard OnEdit="@(() => OnEdit.InvokeAsync(Budget))" OnDelete="@(() => OnDelete.InvokeAsync(Budget?.Id ?? 0))">
    <HeaderContent>
        <MudText Typo="Typo.h6">@Budget.Name</MudText>
    </HeaderContent>
    <Content>
        @Content
    </Content>
</EntityCard>


@code{

    [Parameter]
    public required BudgetWithProgressDto Budget { get; set; }

    [Parameter]
    public EventCallback<BudgetWithProgressDto> OnEdit { get; set; }

    [Parameter]
    public EventCallback<int> OnDelete { get; set; }

    [Parameter]
    public RenderFragment? Content { get; set; }

}