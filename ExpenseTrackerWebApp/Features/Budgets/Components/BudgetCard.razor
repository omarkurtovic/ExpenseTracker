@using ExpenseTrackerWebApp.Database.Models
@using ExpenseTrackerWebApp.Features.Budgets.Dtos
@using ExpenseTrackerWebApp.Features.Budgets.Models
@using MudBlazor
@using ExpenseTrackerWebApp.Components.MyComponents
@using MudBlazor.Extensions
@using System.Globalization

<EntityCard OnEdit="@(() => OnEdit.InvokeAsync(Budget?.Id))" OnDelete="@(() => OnDelete.InvokeAsync(Budget?.Id ?? 0))">
    <HeaderContent>
        <MudText Typo="Typo.h6">@Budget.Name</MudText>
    </HeaderContent>
    <Content>
        @Content
    </Content>
</EntityCard>


@code{

    [Parameter]
    public required BudgetWithProgressDto Budget { get; set; }

    [Parameter]
    public EventCallback<int?> OnEdit { get; set; }

    [Parameter]
    public EventCallback<int> OnDelete { get; set; }

    [Parameter]
    public RenderFragment? Content { get; set; }

}