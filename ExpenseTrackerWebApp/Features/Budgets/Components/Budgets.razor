@page "/budgets"
@using ExpenseTrackerWebApp.Components.MyComponents
@using ExpenseTrackerWebApp.Components.Pages.Dialogs
@using ExpenseTrackerWebApp.Features.Budgets.Commands
@using ExpenseTrackerWebApp.Features.Budgets.Models
@using ExpenseTrackerWebApp.Features.Budgets.Queries
@using MediatR
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@using MudBlazor.Extensions
@using System.Globalization
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Web
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject ISender Mediator   
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Budgets</PageTitle>

@if (loading)
{
    <div class="d-flex justify-center align-center" style="height: 80vh;">
        <MudProgressCircular Indeterminate="true" Size="Size.Large" />
    </div>
}
else
{
    @if(MyBudgets != null){
        <MudContainer MaxWidth="MaxWidth.Medium">
            <MudPaper Class="pa-6 mt-6" Elevation="15">
                <MudGrid>
                    <MudItem xs="12" Class="d-flex justify-center">
                        <MudText Typo="Typo.h4">Budgets</MudText>
                    </MudItem>
                    <DynamicContent>
                        <DesktopContent>
                            <MudItem xs="12" Class="d-flex justify-center gap-5 mb-4">
                                <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="@(() => OpenBudgetDialogAsync(null))">Add</MudButton>
                            </MudItem>
                        </DesktopContent>
                        <MobileContent>
                            <FabButton Text="Add" IconClass="@Icons.Material.Filled.Add" OnClick="@(() => OpenBudgetDialogAsync(null))" />
                        </MobileContent>
                    </DynamicContent>
                    @if(MyBudgets == null || MyBudgets.Count == 0)
                    {
                        <MudItem xs="12" Class="d-flex justify-center mt-4">
                            <MudText Typo="Typo.h5">No budgets found!</MudText>
                        </MudItem>
                    }
                    else
                    {
                        @foreach(var budget in MyBudgets)
                        {
                            <MudItem xs="12" md="6">
                                <BudgetCard budget="@budget" OpenBudgetDialogAsync="OpenBudgetDialogAsync" ConfirmDelete="ConfirmDelete"></BudgetCard>
                            </MudItem>
                        }
                    }
                </MudGrid>
            </MudPaper>
        </MudContainer>
    }
}


@code {
   
    private List<Budget>? MyBudgets { get; set; }
    private bool loading = true;
    private string UserId{get; set;}
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var currentUser = authState.User;
        if (currentUser.Identity?.IsAuthenticated == true)
        {
            UserId = currentUser.FindFirst("sub")?.Value;
        }
        await RefreshPage();
        loading = false;
    }

    private async Task OpenBudgetDialogAsync(int? budget_id)
    {
        var options = new DialogOptions { 
            CloseOnEscapeKey = true, 
            NoHeader=false, 
            CloseButton=true, 
            MaxWidth=MaxWidth.Medium  
        };
        var parameters = new DialogParameters<BudgetDialog>
        {
            { x => x.BudgetId, budget_id }
        };

        var dialog = await DialogService.ShowAsync<BudgetDialog>(title: "", parameters, options);
        var result = await dialog.Result;
        if (result != null && !result.Canceled)
        {
            await RefreshPage();
            StateHasChanged();
        }
    }

    private async Task ConfirmDelete(int budget_id)
    {
        var options = new DialogOptions { 
            CloseOnEscapeKey = true, 
        };
        var parameters = new DialogParameters<ConfirmDialog>
        {
            { x => x.Message,  "Are you sure you want to delete the budget? " }
        };

        var dialog = await DialogService.ShowAsync<ConfirmDialog>(title: "", parameters, options);
        var result = await dialog.Result;
        if (result != null && !result.Canceled)
        {
            var command = new DeleteBudgetCommand(){Id = budget_id};
            await Mediator.Send(command);
            Snackbar.Add("Budget succesfully deleted! ", Severity.Success);
            await RefreshPage();
            StateHasChanged();
        }
    }

    async Task RefreshPage(){
        MyBudgets = await Mediator.Send(new GetBudgetsQuery(){UserId = UserId});
    }
}
