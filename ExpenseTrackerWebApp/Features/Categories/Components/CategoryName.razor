@using ExpenseTrackerWebApp.Database.Models
@using ExpenseTrackerWebApp.Features.Categories.Dtos
@using MudBlazor

<MudPaper Elevation="0" Class="d-flex gap-3 align-end" Style="background: transparent;">
    <MudIcon Icon="@CategoryDto.Icon" Style="@($"color: {CategoryDto.Color};")" Size="IconSize" />
    <MudText Typo="TextSize">@CategoryDto.Name</MudText>
</MudPaper>


@code{
    [Parameter]
    public CategoryWithStatsDto CategoryDto{get; set;}

    [Parameter]
    public Typo TextSize{get; set;} = Typo.body2;

    [Parameter]
    public Size IconSize{get;set;} = Size.Medium;
}