@page "/accounts"
@using ExpenseTracker.Database.Models
@using ExpenseTracker.Dtos
@using ExpenseTracker.Services
@using ExpenseTracker.Components.Pages.Dialogs
@using Microsoft.AspNetCore.Authorization
@inject AccountService AccountService
@inject IDialogService DialogService
@inject NotificationService NotificationService
@inject ISnackbar Snackbar

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider /> 
<MudSnackbarProvider />

<title>Accounts</title>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudPaper Class="pa-6 mud-elevation-15">
        <MudGrid>
            <MudItem xs="12" Class="d-flex justify-center">
                <MudText Typo="Typo.h4">Accounts</MudText>
            </MudItem>
            <MudItem xs="12" Class="mb-4 d-flex justify-center">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => OpenAccountDialogAsync(null))" StartIcon="@Icons.Material.Filled.Add">Add</MudButton>
            </MudItem>
            @if(MyAccounts == null || MyAccounts.Count == 0){
                <MudItem xs="12" Class="d-flex justify-center">
                    <MudText Typo="Typo.h5">No accounts created yet!</MudText>
                </MudItem>
            }
            else{
                @foreach(var account in MyAccounts)
                {
                    <MudItem xs="12" md="6">
                        <MudCard Outlined="true" Class="pa-2 border-2" Color="Color.Surface">
                            <MudCardHeader>
                                <MudText Typo="Typo.h6">@account.Name</MudText>
                            </MudCardHeader>
                            <MudCardContent>
                            <MudPaper Elevation="0">
                                <MudText Style="font-size: 18px;">Balance:  </MudText>
                                <MudText Typo="Typo.h4">@account.CurrentBalance.ToString("C2")</MudText>
                            </MudPaper>
                            </MudCardContent>
                            <MudCardActions>
                            <MudPaper Class="pa-1 d-flex flex-grow-1 justify-space-between mt-3" Elevation="0">
                                <MudButton Class="px-6" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => OpenAccountDialogAsync(account.Id))">Edit</MudButton>
                                <MudButton Class="px-6" Variant="Variant.Filled" Color="Color.Error" OnClick="@(() => ConfirmDelete(account.Id))">Delete</MudButton>
                            </MudPaper>
                            </MudCardActions>
                        </MudCard>
                    </MudItem>
                }
            }
        </MudGrid>
    </MudPaper>
</MudContainer>


@code{
    private List<AccountWithBalance> MyAccounts;

    protected override async Task OnInitializedAsync()
    {
        await UpdatePage();
        await base.OnInitializedAsync();
    }

    private async Task OpenAccountDialogAsync(int? accountId){
        var options = new DialogOptions { CloseOnEscapeKey = true, };
        var parameters = new DialogParameters<AccountDialog>
        {
            { x => x.AccountId, accountId }
        };

        var dialog = await DialogService.ShowAsync<AccountDialog>(title: "Simple Dialog", parameters, options);
        var result = await dialog.Result;
        if (!result.Canceled)
        {
            await UpdatePage();
        }
    }

    
    private async Task ConfirmDelete(int accountId)
    {
        var options = new DialogOptions { CloseOnEscapeKey = true };
        var parameters = new DialogParameters<ConfirmDialog>
        {
            { x => x.Message,  "Are you sure you want to delete the account and the related transactions? " }
        };

        var dialog = await DialogService.ShowAsync<ConfirmDialog>(title: "Warning", parameters, options);
        var result = await dialog.Result;
        if (!result.Canceled)
        {
            await AccountService.DeleteAsync(accountId);
            await NotificationService.ShowSuccessAsync("Account succesfully deleted! ");
            await UpdatePage();
        }
    }


    private async Task UpdatePage(){
        MyAccounts = await AccountService.GetAllWithBalanceAsync();
    }
}